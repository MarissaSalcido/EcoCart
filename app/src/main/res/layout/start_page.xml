<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1sp"
    android:layout_marginBottom="1sp"
    android:background="#E2F0E0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="126dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Welcome to EcoCart"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="185dp"
        android:layout_height="119dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="99dp"
        app:srcCompat="@drawable/tree_icon" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="138dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="36dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Hello, what's your name?"
        android:textColor="#0F0000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="44dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/nameInput"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="78dp"
        android:text="Go"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/CO2_DEF"
        android:layout_width="304dp"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="57dp"
        android:fontFamily="casual"
        android:text="CO2 is a greenhouse gas. Emissions are the release of greenhouse gasses into the atmosphere over a specified area and period of time.  A person's carbon footprint is represented by the amount of carbon dioxide and other carbon compounds emitted, expressed here in kg of CO2 per kg of food item produced."
        android:textColor="@android:color/black"
        android:textSize="12sp" />

</RelativeLayout>