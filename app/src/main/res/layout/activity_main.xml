<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F0E0"
    android:orientation="vertical">

    <Button
        android:id="@+id/carbButton"
        android:layout_width="66dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/main_button"
        android:gravity="clip_horizontal|center_horizontal|center_vertical"
        android:text="Carbs" />

    <Button
        android:id="@+id/fatButton"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/main_button"
        android:gravity="clip_horizontal|center_horizontal|center_vertical"
        android:text="fat" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="265dp"
        android:layout_height="235dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="320dp"
        android:src="@drawable/tree2" />

    <TextView
        android:id="@+id/nameField"
        android:layout_width="344dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="208dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Hello, name! To see how to reduce your food carbon footprint, click on one of the following:"
        android:textColor="#FD030303"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/proteinButton"
        android:layout_width="71dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/main_button"
        android:gravity="clip_horizontal|center_horizontal|center_vertical"
        android:text="protein" />

</RelativeLayout>